@using System.Web.Optimization
@model List<EastBancTestAssignment.KnapsackProblem.UI.MVC.ViewModels.BackpackTaskViewModel>

<div class="vertical-space">
    <h1 class="">Task List</h1>
    <a href="@Url.Action("NewBackpackTask", "Backpack")" class="btn btn-success col-lg-offset-11">New Task</a>
</div>



<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Task Name</th>
        <th>Backpack Weight Limit</th>
        <th>Best Item Price</th>
        <th>Percent Of Complete</th>
        <th>Status</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Count > 0)
    {
        foreach (var task in Model)
        {
            <tr id="@task.Id">
                <th id="name">
                    @if (task.Complete)
                    {
                        <a href="@Url.Action("Details", "Backpack", new {id = task.Id})">@task.Name</a>
                    }
                    else
                    {
                        <span>@task.Name</span>
                    }
                </th>
                <th id="weight">@task.WeightLimit</th>
                <th id="price">@task.BestPrice</th>
                <th id="percantage">@task.PercentComplete%</th>
                <th id="staus">@task.StatusMessage</th>
                <th id="delete-button">
                    <div class="text-center">
                        <button class="btn btn-danger js-delete-row">Delete</button>
                    </div>
                </th>
            </tr>
        }
    }
    </tbody>
</table>


@section scripts
{
    @Scripts.Render("~/bundles/signalr");
    @Scripts.Render("~/bundles/removerow");
    <script src="~/signalr/hubs"></script>
}